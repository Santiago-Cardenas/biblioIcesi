# Environment
NODE_ENV=development

# Server
PORT=3000
SECRET=your_jwt_secret_key_here


# Database (elige solo una URI según el entorno)
# Desarrollo local:
MONGODB_URI=mongodb://localhost:27017/biblioicesi_dev
# Producción (Atlas/Vercel):
# MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/biblioicesi?retryWrites=true&w=majority

# Nombre de la base de datos (usado por el singleton)
MONGODB_DB=biblioicesi


# Database - Test
MONGODB_TEST_URI=mongodb://localhost:27017/biblioicesi_test

# Database - Production (Vercel)
# MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/biblioicesi?retryWrites=true&w=majority
# MONGODB_DB=biblioicesi
# Google Books API (optional)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
